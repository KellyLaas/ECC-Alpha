<div class="content-frame">
    <%= form_for @org, as: "org", url: {action: "create"}, html: {class: "new_ob"} do |f| %>
      <%= f.label "Organization Name:" %><em class="text-danger">*</em>
      <%= f.text_field :name %>
      <%= f.label "Short Description:" %><em class="text-danger">*</em>
      <%= f.text_field :desc %>

    <%= f.submit "Create" %>
  <% end %>

</div>
